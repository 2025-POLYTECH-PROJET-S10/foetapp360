<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/hippotrack/db" VERSION="20250205" COMMENT="XMLDB file for Moodle hippotrack"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <!-- Table principale pour stocker les instances du plugin -->
    <TABLE NAME="hippotrack" COMMENT="Stores the hippotrack activity module instances.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID du cours contenant l'activité"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Nom de l'activité"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Timestamp de création"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Timestamp de modification"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" COMMENT="Description de l'activité"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" COMMENT="Format de la description"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_course" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <!-- Table pour stocker les ensembles de données -->
    <TABLE NAME="hippotrack_datasets" COMMENT="Stocke les ensembles de données pour l'exercice">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Nom de la position"/>
        <FIELD NAME="sigle" TYPE="char" LENGTH="10" NOTNULL="true" COMMENT="Sigle de la position"/>
        <FIELD NAME="rotation" TYPE="int" LENGTH="3" NOTNULL="true" COMMENT="Angle de rotation en degrés"/>
        <FIELD NAME="inclinaison" TYPE="int" LENGTH="1" NOTNULL="true" COMMENT="Inclinaison (1 = bien fléchi, -1 = mal fléchi)"/>
        <FIELD NAME="vue_anterieure" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Nom du fichier image de la vue antérieure"/>
        <FIELD NAME="vue_laterale" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Nom du fichier image de la vue latérale"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <!-- Table pour stocker les sessions d'entraînement -->
    <TABLE NAME="hippotrack_training_sessions" COMMENT="Sessions d'entraînement des étudiants">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID de l'étudiant"/>
        <FIELD NAME="instanceid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID de l'instance hippotrack"/>
        <FIELD NAME="difficulty" TYPE="char" LENGTH="10" NOTNULL="true" COMMENT="Facile ou Difficile"/>
        <FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="ID de la question actuellement posée"/>
        <FIELD NAME="input_type" TYPE="char" LENGTH="50" NOTNULL="false" COMMENT="Type d'input sélectionné pour cette question"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Timestamp du début de session"/>
        <FIELD NAME="timespent" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Temps passé en secondes"/>
        <FIELD NAME="questions_answered" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Nombre de questions répondues"/>
        <FIELD NAME="correct_answers" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Nombre de réponses correctes"/>
        <FIELD NAME="finished" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="1 si la session est terminée, 0 sinon"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_user" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="fk_instance" TYPE="foreign" FIELDS="instanceid" REFTABLE="hippotrack" REFFIELDS="id"/>
        <KEY NAME="fk_question" TYPE="foreign" FIELDS="questionid" REFTABLE="hippotrack_datasets" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <!-- Table pour stocker les tentatives des étudiants -->
    <TABLE NAME="hippotrack_attempts" COMMENT="Tentatives des étudiants sur chaque question">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sessionid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID de la session de l'étudiant"/>
        <FIELD NAME="datasetid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID de l'ensemble utilisé pour la question"/>
        <FIELD NAME="input_type" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Type d'input donné (Nom, Sigle, etc.)"/>
        <FIELD NAME="student_response" TYPE="text" NOTNULL="false" COMMENT="Réponse de l'étudiant"/>
        <FIELD NAME="is_correct" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="1 = Correct, 0 = Incorrect"/>
        <FIELD NAME="timeanswered" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Timestamp de la réponse"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_session" TYPE="foreign" FIELDS="sessionid" REFTABLE="hippotrack_training_sessions" REFFIELDS="id"/>
        <KEY NAME="fk_dataset" TYPE="foreign" FIELDS="datasetid" REFTABLE="hippotrack_datasets" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

  </TABLES>
</XMLDB>
